<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/item_comment_profile_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/round_person_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_comment_nickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(test)소롱고스"
            app:layout_constraintStart_toEndOf="@id/item_comment_profile_iv"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/item_comment_belong_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(test)한양대학교 ERICA 전자공학부 학부생"
            app:layout_constraintStart_toStartOf="@id/item_comment_nickname_tv"
            app:layout_constraintTop_toBottomOf="@id/item_comment_nickname_tv" />

        <TextView
            android:id="@+id/item_comment_content_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="댓글댓글댓글댓글"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/item_comment_profile_iv"
            app:layout_constraintTop_toBottomOf="@id/item_comment_profile_iv" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>