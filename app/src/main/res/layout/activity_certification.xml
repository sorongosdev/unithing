<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CertificationActivity">

        <ImageView
            android:id="@+id/activity_certification_iv"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="149dp"
            android:layout_marginBottom="80dp"
            android:src="@drawable/baseline_airline_stops_24"
            app:layout_constraintBottom_toTopOf="@+id/activity_certification_gallery_btn"
            app:layout_constraintStart_toStartOf="@+id/activity_certification_camera_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/activity_certification_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="192dp"
            android:text="Button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/activity_certification_camera_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="14dp"
            android:text="카메라"
            app:layout_constraintBottom_toTopOf="@+id/activity_certification_btn1"
            app:layout_constraintEnd_toEndOf="@+id/activity_certification_btn1"
            app:layout_constraintEnd_toStartOf="@+id/activity_certification_gallery_btn"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/activity_certification_gallery_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="254dp"
            android:text="갤러리"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/activity_certification_camera_btn"
            app:layout_constraintTop_toBottomOf="@+id/activity_certification_iv" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>