<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginTop="15dp">

    <ImageView
        android:id="@+id/activity_comment_profile_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_person_24"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/activity_comment_nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소롱고스"
        app:layout_constraintTop_toTopOf="@id/activity_comment_profile_iv"
        app:layout_constraintStart_toEndOf="@id/activity_comment_profile_iv"
        />
    <TextView
        android:id="@+id/activity_comment_belong_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="한양대학교 ERICA 전자공학부 학부생"
        app:layout_constraintTop_toBottomOf="@id/activity_comment_nickname_tv"
        app:layout_constraintStart_toEndOf="@id/activity_comment_profile_iv"
        />
    <TextView
        android:id="@+id/activity_comment_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/activity_comment_profile_iv"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/activity_comment_content_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="내용\n\n\n\n\n\n\n...내용"
        app:layout_constraintTop_toBottomOf="@id/activity_comment_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/activity_comment_flow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:constraint_referenced_ids=
            "activity_comment_like_iv,
            activity_comment_comment_iv,
            activity_comment_share_iv,
            activity_comment_bookmark_iv"
        />
    <ImageView
        android:id="@+id/activity_comment_like_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_volunteer_activism_24"/>
    <TextView
        android:id="@+id/activity_comment_like_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/activity_commen_flow"
        app:layout_constraintBottom_toBottomOf="@id/activity_commen_flow"
        app:layout_constraintStart_toEndOf="@id/activity_commen_like_iv"
        android:text="20"/>
    <ImageView
        android:id="@+id/activity_comment_comment_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_comment_24"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/activity_comment_comment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/activity_comment_flow"
        app:layout_constraintBottom_toBottomOf="@id/activity_comment_flow"
        app:layout_constraintStart_toEndOf="@id/activity_comment_comment_iv"
        android:text="20"/>
    <ImageView
        android:id="@+id/activity_comment_bookmark_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_bookmark_border_24"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/activity_comment_share_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_share_24"
        tools:ignore="MissingConstraints" />
    <include
        android:id="@+id/activity_comment_bs"
        layout="@layout/bottom_sheet_comment"/>

</androidx.constraintlayout.widget.ConstraintLayout>